    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="@color/gray" android:endColor="@color/gray" android:angle="270.0" android:centerColor="@color/gray" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient android:startColor="@color/color_important" android:endColor="@color/color_important" android:angle="270.0" android:centerColor="@color/color_important" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="@color/color_important" android:endColor="@color/color_important" android:angle="270.0" android:centerColor="@color/color_important" />
            </shape>
        </clip>
    </item>
</layer-list>